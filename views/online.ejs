<%- include('layout_begin.ejs', { page: "online" }) %>
<%- include('header.ejs') %>

<div id="main">
	<div class="container">
		<div class="row justify-content-start">
			<div class="col-lg-3 col-md-12">
				<div class="navigation d-lg-block">
					<div class="navigation-search col col-11">
						<input type="text" id="searchName" class="searchName" placeholder="<%= strings.searchPlayerNamePlaceholderStr %>">
						<input type="text" id="searchLevel" class="searchLevel" placeholder="<%= strings.searchPlayerLevelPlaceholderStr %>" title="<%= strings.searchPlayerLevelTitleStr %>">
					</div>
					<select id="sort" class="sort col col-11">
						<option value="default" selected="selected">Default</option>
						<option value="levelDesc"><%= strings.playerLevelDescContentStr %></option>
						<option value="levelAsc"><%= strings.playerLevelAscContentStr %></option>
						<option value="classDesc"><%= strings.playerClassDescContentStr %></option>
						<option value="classAsc"><%= strings.playerClassAscContentStr %></option>
						<option value="nameDesc"><%= strings.playerNameDescContentStr %></option>
						<option value="nameAsc"><%= strings.playerNameAscContentStr %></option>
					</select>
					<div class="col-11 d-flex">
						<button id="clearNavigation" class="clearNavigation flex-fill">
							<img src="./../static/img/icons/reset.svg" width="17px" height="17px">
						</button>
					</div>
				
					<br>
					<div class="navigationCheckbox col col-11">
						<span class="SpanAutoupdateCheck">
							<div class="form-check form-switch">
								<input class="form-check-input" type="checkbox" id="autoupdateCheck" role="switch">
								<label  class="form-check-label"for="autoupdateCheck"><%= strings.autoupdateLabelStr %></label>
							</div>
						</span>
					</div>
				</div>
			</div>
			<div class="content col-lg-6 col-md-12">
				<% let isEmpty = data.length === 0 %>
				<% if (isEmpty) { %>
				<div id="content">
					<h2 class="empty">empty</h2>
				</div>
				<% } else { %>
				<div id="content" class="TablePlayers">
					<table>
						<thead>
							<tr>
								<th>#</th>
								<th>level</th>
								<th>class</th>
								<th>name</th>
								
							</tr>
						</thead>
						<tbody id="player-table">
							<% let id = 1 %>
							<% for(let player of data) { %>
							<tr id="<%= id %>" class="player-details">
								<td class="player-id"><%= id++ %></td>
								<td class="player-lvl"><%= player.level %></td>
								<!-- <td class="player-class"><%= classes[player.class] %></td> -->
								<td class="player-class">
									<!-- <%= classes[player.class] %> -->
									<!-- <span class="party-player col" title="<%= classes[player.class] %> - <%= player.level %>"> -->

									<img class="party-playerImg" src="./../static/img/class_icons/<%= player.class %>.png" width="25px" height="25px">
								</td>
								<td class="player-name"><%= player.name %></td>
							</tr>
							<% } %>
						</tbody>
					</table>
				</div>
				<% } %>
			</div>
	
		</div>
	</div>
</div>
<%- include('layout_end.ejs') %>