<% const labelStr = (typeof label === 'undefined' || label == null) ? strings[name + 'Label'] : label %>
<div class="form-check">
    <input class="form-check-input no-transition" type="checkbox" id="<%= name %>" role="switch">
    <label class="form-check-label" for="<%= name %>"><%- labelStr %></label>
</div>