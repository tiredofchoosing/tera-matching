<header class="sticky-top">
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-dark d-flex">
            <div class="header container-fluid col-lg-12 col-md-10 col-sm-12">
                <span>
                    <img class="nav-item header-logo" alt="" height="56px" width="56px" draggable="false">
                </span>
                <span>
                    <% let onlineStr=(typeof online==='undefined' || online==null) ? '' : ': ' + online %>
                    <a class="nav-item header-online header-page-link" href="/online"><%= strings.onlineHeaderLinkContent %><%= onlineStr %></a>
                </span>
                <button class="navbar-toggler navbar-toggler-right" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <ul class="navbar-nav ml-auto d-none d-lg-flex">
                    <li>
                        <a class="nav-item header-page-link" href="/dungeons"><%= strings.dungeonsHeaderLinkContent %></a>
                    </li>
                    <li>
                        <a class="nav-item header-page-link" href="/battlegrounds"><%= strings.battlegroundsHeaderLinkContent %></a>
                    </li>
                </ul>
                <div class="header-buttons d-none d-lg-flex">
                    <a class="nav-link header-button" href="#" role="button" ria-expanded="false" title="<%= strings.settingsTitle %>" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                        <img src="/static/img/icons/settings-l.svg" height="26px" width="26px" draggable="false">
                    </a>
                </div>
                <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title" id="offcanvasRightLabel">Title</h5>
                        <!-- <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button> -->
                        <div class="header-buttons d-flex ml-md-auto">
                            <a class="nav-link header-button" href="#" role="button" ria-expanded="false" title="<%= strings.settingsTitle %>" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                                <img src="/static/img/icons/settings-l.svg" height="26px" width="26px" draggable="false">
                            </a>
                        </div>
                        <button class="navbar-toggler" type="button" data-bs-dismiss="offcanvas" aria-label="Close">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                    </div>
                    <div class="offcanvas-body">
                        <ul class="navbar-nav ml-auto">
                            <li>
                                <a class="nav-item header-page-link" href="/dungeons"><%= strings.dungeonsHeaderLinkContent %></a>
                            </li>
                            <li>
                                <a class="nav-item header-page-link" href="/battlegrounds"><%= strings.battlegroundsHeaderLinkContent %></a>
                            </li>
                        </ul>
                        <div id="offcanvasFilterContainer"></div>
                    </div>
                </div>
            </div>
        </nav>
    </div>
</header>

<div class="modal fade" id="staticBackdrop" data-bs-backdrop="true" data-bs-keyboard="true" tabindex="0" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content dropdown-menu">
            <div class="modal-header">
                <h5>Настройки</h5>
                <button type="button" class="but-close" data-bs-dismiss="modal" aria-label="Close">
                    <img src="/static/img/icons/close-l.svg" alt="" width="16" height="16">
                </button>
            </div>
            <div class="modal-body">
                <div class="row modal-delimiter modal-sections">
                    <div class="col-4 modal-sections-title"><%= strings.ModalTitleGeneral %></div>
                    <div class="col modal-sections-body">
                        <button class="modal-button" id="toggleLang" value="<%= lang %>" title="<%= strings.toggleLangTitle %>">
                            <%= strings.changeInterfaceLanguage %>
                            <span class="lang-title"><%= strings.changeInterfaceLanguageTitle %></span>
                            <!-- <img src="/static/img/icons/global.svg" height="20px" width="20px" draggable="false"> -->
                        </button>
                        <%- include('checkbox.ejs', { name: 'autoupdateCheck' }) %>
                    </div>
                </div>
                <div class="row modal-delimiter modal-sections">
                    <div class="col-4 modal-sections-title"><%= strings.ModalTitleTheme %></div>
                    <div class="col modal-sections-body">
                        <button class="modal-button" id="toggleStyle" title="<%= strings.toggleStyleTitle %>">
                            <img height="26px" width="26px" draggable="false">
                            <%= strings.ModalSwitchInterfaceTheme %>
                        </button>
                        <%- include('checkbox.ejs', { name: 'settingsDisableBackground' }) %>
                    </div>
                </div>
                <div class="row modal-sections">
                    <div class="col-4 modal-sections-title"><%= strings.ModalTitleCurrentList %></div>
                    <div class="col modal-sections-body">
                        ...
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>